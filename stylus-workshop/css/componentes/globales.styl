color-primario = #333333
color-claro = #FFFFFF
color-secundario = #8841da
color-variacion = #012179
Fuente1 = 'Lato', sans-serif
Fuente2 = 'Oswald', sans-serif

contenedor()
	display: flex
	width: 90%
	margin: 0 auto
	padding: 30px 0

caja-sombra()
	background-color: color-claro
	box-shadow: 0px 20px 33px 0px rgba(0,0,0,0.20)

opacidad(color, cantidad)
	alpha(color,cantidad)

for header in 1 2 3
	h{header}
		font-size: 3.5rem - (0.5*header)

titulos(fuente)
	if fuente == Fuente1
		font-family: Fuente1
	else
		font-family: Fuente2
		font-weight: 500
		text-transform: uppercase

*
	box-sizing: border-box
	margin: 0
	padding: 0

html
	font-size: 62.5%
	titulos(Fuente1)

body 
	font-size: 1.6rem